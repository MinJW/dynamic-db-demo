<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mjw.business.device.dao.DeviceUserDao">

    <select id="userList" resultType="com.mjw.business.device.model.User">
        SELECT *
        FROM user
    </select>

    <select id="findUserById" parameterType="int" resultType="com.mjw.business.device.model.User">
        select * from user where id = #{id}
    </select>

    <update id="update" parameterType="com.mjw.business.user.model.User">
        update user set name = #{name} where id = #{id}
    </update>

</mapper>
